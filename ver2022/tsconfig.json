{
  "include": ["./src"], // js로 컴파일하고 싶은 모든 것들
  "compilerOptions": {
    "outDir": "./build", // 컴파일된 JS파일이 생성될 공간 설정
    "target": "ES6", // 컴파일할 JS버전을 설정
    "lib": ["ES6"], // JS파일이 어디서 작동하는지를 런타임환경을 설정
    "strict": true,
    // "isolatedModules": true, // 소스코드 내의 모든 파일을 하나의 모듈로 만들기를 강제하는 설정
    "esModuleInterop": true, // commonjs와 ex6 export 방식의 차이를 타입스크립트가 알게해서 es6방식으로 사용할 수 있게 해주는 설정
    "module": "CommonJS"
  }
}
